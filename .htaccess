RewriteEngine On
# HTTPS 강제
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# non-www → www 301 (네이버/구글 도메인 통일, SEO 정석)
RewriteCond %{HTTP_HOST} ^crossero\.com$ [NC]
RewriteRule ^(.*)$ https://www.crossero.com/$1 [L,R=301]
# index.html -> / 정규화 (홈 URL 중복 방지)
RewriteRule ^index\.html$ / [L,R=301]